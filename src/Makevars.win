RWINLIB = ../windows/harfbuzz

PKG_CPPFLAGS = \
	-I$(RWINLIB)/include/harfbuzz \
	-I$(RWINLIB)/include/fribidi

PKG_LIBS = -L$(RWINLIB)/lib$(R_ARCH) -L$(RWINLIB)/lib \
	-lfribidi -lfreetype -lharfbuzz

all: clean winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"

clean:
	rm -f $(OBJECTS) $(SHLIB)
